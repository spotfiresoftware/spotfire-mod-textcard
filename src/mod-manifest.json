{
    "apiVersion": "1.0",
    "version": "1.2",
    "name": "Text Card",
    "id": "text-card-mod",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "sortOrder",
            "type": "string",
            "defaultValue": "asc"
        },
        {
            "name": "useCustomCardBy",
            "type": "boolean",
            "defaultValue": false
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            },
            "automaticConfiguration": {
                "expressionHeuristics": "none"
            }
        },
        "axes": [
            {
                "name": "Card by",
                "mode": "categorical",
                "automaticConfiguration": {
                    "expressionHeuristics": "none"
                }
            },
            {
                "name": "Content",
                "mode": "categorical"
            },
            {
                "name": "Annotation",
                "mode": "categorical",
                "automaticConfiguration": {
                    "expressionHeuristics": "none"
                }
            },
            {
                "name": "Sorting",
                "mode": "dual",
                "automaticConfiguration": {
                    "expressionHeuristics": "none"
                },
                "dataTypes": { "allowDateTime": true, "allowNumeric": true, "allowString": true }
            },
            {
                "name": "Tooltip",
                "mode": "categorical",
                "automaticConfiguration": {
                    "expressionHeuristics": "none"
                }
            }
        ]
    },
    "files": ["index.html", "main.css", "main.js", "creator.js", "helper.js", "renderer.js"]
}
